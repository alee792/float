<link rel="stylesheet" href="/cd/stylesheets/component.css">
<section class="section floating-fill">
    <div class="container">
        <div class="tile is-ancestor">
            <div class="tile is-vertical">
                <div class="tile">
                    <div class="tile is-parent">
                        <article class="tile is-child box">
                            <ul id="stack_slamet" class="stack stack--slamet">
                                {{!-- Candidate Post --}} {{#each posts}}
                                <li class="stack__item">
                                    <div class="card">
                                        <div class="card-image">
                                            <div class="filler">
                                                <figure class="image is-4by3">
                                                    <img class="card-media" src="{{ this.post_candidate.urls.[0] }}" alt="Placeholder image">
                                                </figure>
                                            </div>
                                        </div>
                                        <div class="card-content">
                                            <div class="media">
                                                <div class="media-left">
                                                    <figure class="image is-48x48">
                                                        <img src="{{ this.post_plan.avatar_image }}" alt="Placeholder image">
                                                    </figure>
                                                </div>
                                                <div class="media-content">
                                                    <p class="title is-4">{{ this.created_by }}</p>
                                                    <p class="subtitle is-6">{{ this.post_plan.post_account }}</p>
                                                </div>
                                            </div>

                                            <div class="content">
                                                {{ this.post_candidate.content }}
                                                <br>
                                                <time>{{ this.post_plan.post_time }}</time>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                {{/each}}
                            </ul>
                            <div class="controls">
                                <button class="cd-button button--sonar button--reject" data-stack="stack_slamet">
                                    <i class="fa fa-times"></i>
                                    <span class="text-hidden">Reject</span>
                                </button>
                                <button class="cd-button button--sonar button--accept" data-stack="stack_slamet">
                                    <i class="fa fa-check"></i>
                                    <span class="text-hidden">Accept</span>
                                </button>
                            </div>
                        </article>
                    </div>
                    <div class="tile is-parent is-vertical">
                        <article class="tile is-child box">
                            {{!-- Details --}}
                            <table class="table is-hoverable is-striped is-centered full-width">
                                <caption class="is-size-4">
                                    <strong>Details</strong>
                                </caption>
                                <tbody>
                                    <tr>
                                        <th>Author</th>
                                        <td>The Real Deal</td>
                                    </tr>
                                    <tr>
                                        <th>Post Time</th>
                                        <td>10/22/2017 7:35 PM EST</td>
                                    </tr>
                                    <tr>
                                        <th>Demographic</th>
                                        <td>Males 18-26</td>
                                    </tr>
                                    <tr>
                                        <th>Context</th>
                                        <td>Yeah, we're working on it</td>
                                    </tr>
                                </tbody>
                            </table>
                        </article>
                        <article class="tile is-child box is-flex" id="feedback">
                            <div class="full-width" id="feedback-form">
                                <div class="field">
                                    <label class="label is-size-4">Feedback</label>
                                    <div class="control">
                                        <textarea class="textarea" placeholder="Notes"></textarea>
                                    </div>
                                </div>
                                <nav class="level">
                                    <div class="field">
                                        <div class="control">
                                            <label class="checkbox">
                                                <input type="checkbox">
                                                <small> I agree to the
                                                    <a href="#">terms and conditions</a>
                                                </small>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="field is-grouped is-pulled-right flex-end">
                                        <div class="control">
                                            <button class="button is-link">Float</button>
                                        </div>
                                        <div class="control">
                                            <button class="button is-warning">Sink</button>
                                        </div>
                                    </div>
                                </nav>
                            </div>
                        </article>
                    </div>
                </div>
                <div class="tile is-parent">
                    <article class="tile is-child box">
                        <!-- Put any content you want -->
                    </article>
                </div>
            </div>
            <div class="tile is-parent is-4" id="profile">
                <article class="tile is-child box flex">
                    <!-- Profile Box -->
                    <div class="full-width" id="profile-box">
                        <div class="media full-width">
                            <div class="media-left">
                                <figure class="image is-48x48">
                                    <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                                </figure>
                            </div>
                            <div class="media-content">
                                <p class="title is-4">{{ currentUser.name }}
                                    <a class="is-pulled-right" href="/settings">
                                        <span class="icon">
                                            <i class="fa fa-cog"></i>
                                        </span>
                                    </a>
                                </p>
                                <p class="subtitle is-6">{{ currentUser.screen_name }}</p>
                            </div>
                        </div>
                        <br>
                        <table class="table is-hoverable is-striped is-centered full-width">
                            <tbody>
                                <tr>
                                    <th>Floats Today</th>
                                    <td>7</td>
                                </tr>
                                <tr>
                                    <th>Floats this Week</th>
                                    <td>24</td>
                                </tr>
                                <tr>
                                    <th>Average Floats/Day</th>
                                    <td>12</td>
                                </tr>
                                <tr>
                                    <th>Average Floats/Week</th>
                                    <td>84</td>
                                </tr>
                                <tr>
                                    <th>Percent Sunk</th>
                                    <td>2%</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <button class="button is-info flex-end" id="profile-toggle">Hide</button>
                </article>
            </div>
        </div>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.8/handlebars.min.js"></script>
        <script src="/cd/js/classie.js"></script>
        <script src="/cd/js/dynamics.min.js"></script>
        <script src="/cd/js/main.js"></script>
        <script src="/js/main.js"></script>
    </div>
</section>